@model DoAn_CuaHangLaptop.Models.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="m-5">
        <h4 align="center">Cập nhật nhân viên</h4>
        <hr />
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNV" />
            <input type="hidden" asp-for="TenDangNhap" />
            <div class="row">
                <span class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TenDangNhap)
                </span>
                <span class="col-sm-10">
                    @Html.DisplayFor(model => model.TenDangNhap)
                </span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="TenNV"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="TenNV">
                </div>
                <span asp-validation-for="TenNV" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="NgaySinh"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="NgaySinh">
                </div>
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="GioiTinh"></label>
                <div class="col-sm-10">
                    <select asp-for="GioiTinh" class="form-control">
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                </div>
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ChucVu"></label>
                <div class="col-sm-10">
                    <select asp-for="ChucVu" class="form-control">
                        <option>QL</option>
                        <option>NV</option>
                    </select>
                </div>
                <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="DiaChi"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="DiaChi">
                </div>
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="NgayVL"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="NgayVL">
                </div>
                <span asp-validation-for="NgayVL" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="SoDT"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="SoDT">
                </div>
                <span asp-validation-for="SoDT" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="Index">Trở về trang danh sách</a>
        </div>
    </div>
</div>

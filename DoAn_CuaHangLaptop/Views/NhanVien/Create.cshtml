@model DoAn_CuaHangLaptop.Models.NhanVien

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-5">
        <h4 align="center"> Tạo Nhân Viên</h4>
        <hr />
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenDangNhap" class="control-label"></label>
                        <input asp-for="TenDangNhap" class="form-control" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenNV" class="control-label"></label>
                        <input asp-for="TenNV" class="form-control" />
                        <span asp-validation-for="TenNV" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgaySinh" class="control-label"></label>
                        <input asp-for="NgaySinh" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GioiTinh" class="control-label"></label>
                        <select class="form-control" asp-for="GioiTinh">
                                <option>Nam</option>
                                <option>Nữ</option>
                        </select>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChucVu" class="control-label"></label>
                        <select class="form-control" asp-for="ChucVu">
                            <option>QL</option>
                            <option>NV</option>
                        </select>
                        <span asp-validation-for="ChucVu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaChi" class="control-label"></label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayVL" class="control-label"></label>
                        <input asp-for="NgayVL" class="form-control" />
                        <span asp-validation-for="NgayVL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoDT" class="control-label"></label>
                        <input asp-for="SoDT" class="form-control" />
                        <span asp-validation-for="SoDT" class="text-danger"></span>
                    </div>
                    <div class="form-group" align="center">
                        <input type="submit" value="Xác nhận" class="btn btn-primary" />
                    </div>
                </form>

        <div>
            <a asp-action="Index">Trở về trang danh sách</a>
        </div>

    </div>
</div>



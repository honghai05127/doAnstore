@model IEnumerable<DoAn_CuaHangLaptop.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card m-5">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong>Danh sách tài khoản</strong>
            </div>
            <div class="col-md-6 d-flex justify-content-end">
                <a href="@Url.Action("Create","TaiKhoan")" class="btn btn-success">Thêm</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenDangNhap)
                    </th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDangNhap)
                        </td>
                        <td>
                            @Html.ActionLink("Cập nhật", "Edit", new { tendangnhap = item.TenDangNhap }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Xem chi tiết", "Details", new { tendangnhap = item.TenDangNhap }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Xóa", "Delete", new { tendangnhap = item.TenDangNhap }, new { onclick = "return confirm('Bạn chắc chắn xóa tài khoản này?');", @class = "btn btn-danger" })
                           
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>

    </div>
</div>
<style>
    table th{
        font-weight: bold!important;
    }
</style>